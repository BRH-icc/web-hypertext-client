{
  "name": "web-hypertext-client",
  "version": "1.0.0",
  "description": "Cross-platform web application with hypertext editing, intelligent crawling, and document export capabilities",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev-renderer\" \"npm run dev-main\"",
    "dev-main": "electron src/main/main.js",
    "dev-renderer": "webpack serve --config webpack.renderer.js --mode development",
    "build": "npm run build-renderer && npm run build-main",
    "build-main": "webpack --config webpack.main.js --mode production",
    "build-renderer": "webpack --config webpack.renderer.js --mode production",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write ."
  },
  "keywords": [
    "hypertext",
    "web-client",
    "cross-platform",
    "collaborative-editing",
    "web-crawler",
    "knowbot",
    "document-export"
  ],
  "author": "Web Hypertext Client Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.22.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "eslint": "^8.42.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.1.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "cheerio": "^1.0.0-rc.12",
    "axios": "^1.4.0",
    "puppeteer": "^20.5.0",
    "sqlite3": "^5.1.6",
    "pdf-lib": "^1.17.1",
    "latex.js": "^0.12.4",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "prosemirror-model": "^1.19.0",
    "prosemirror-state": "^1.4.2",
    "prosemirror-view": "^1.31.0",
    "prosemirror-commands": "^1.5.0",
    "prosemirror-schema-basic": "^1.2.0",
    "prosemirror-schema-list": "^1.3.0",
    "prosemirror-collab": "^1.3.0",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.webhtclient.app",
    "productName": "Web Hypertext Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}